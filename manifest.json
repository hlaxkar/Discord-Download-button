{
  "manifest_version": 3,
  "name": "Discord Image Downloader",
  "version": "1.0",

  "description": "Image download button for Discord messages",
  "icons": {
    "128": "128icon.png"
  },
  "permissions": [
    "downloads",
    "activeTab",
    "scripting",
    "tabs",
    "storage"
    
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.discord.com/channels*","<all_urls>"], 
      

      "js": ["script.js","test.js"]
    }
  ],
  
  "author": "hlaxkar@gmail.com",

  "homepage_url": "https://github.com/hlaxkar/Discord-Download-button"
}
